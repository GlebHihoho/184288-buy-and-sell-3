extends ../common/layout.pug
block content
  include ../common/categories.pug
  section.tickets-list
    h2.visually-hidden Предложения из категории электроника
    .tickets-list__wrapper
      .tickets-list__header
        p.tickets-list__title
          | Электроника
          b.js-qty 62
      ul
        each ticket, index in tickets
          include ../common/ticket.pug
      .tickets-list__pagination
        ul.pagination
          li
            a.active(href='#') 1
          li
            a(href='#') 2
          li
            a(href='#') 3
          li
            a(href='#') 4
          li
            a(href='#') 5
          li
            a(href='#') дальше
